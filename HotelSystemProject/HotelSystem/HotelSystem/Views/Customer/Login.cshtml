@model HotelSystem.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="w3l-login-form">
    <h4 style="color: #DAA520">Login</h4>

    @if (ViewBag.Message != "")
    {
        <div class="text-danger">@ViewBag.Message</div>
    }

    <hr />
    <div class=" w3l-form-group">
        <label>Email:</label>
        <div class="group">
            <i class="fas fa-user"></i>
            <input type="text" name="Email" form-control" placeholder="Email" required="required" />
        </div>
    </div>
    <div class=" w3l-form-group">
        <label>Password:</label>
        <div class="group">
            <i class="fas fa-unlock"></i>
            <input type="password" name="Password" placeholder="Password" required="required" />
            @*@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })*@

        </div>
    </div>

    <div class="forgot">
        @Html.ActionLink("Forgot Password?", "ForgotPassword", "Customer")
        <p><input type="checkbox">Remember Me</p>
    </div>

    <button class="btn-login" type="submit">Login</button>

</div>
}

<div>
    <p class=" w3l-register-p" >Don't have an account?<a href="#" class="register">
    @Html.ActionLink("Register Now", "Registration", "Customer")
        </p>
</div>
<link href="~/styles/LoginPage.css" rel="stylesheet" />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}