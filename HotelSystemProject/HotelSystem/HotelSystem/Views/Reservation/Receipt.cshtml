@model HotelSystem.Data.DataModels.Reservation
@{
    ViewBag.Title = "Receipt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="body-wrap">
    <tbody>
        <tr>
            <td></td>
            <td class="container" width="600">
                <div class="content">
                    <table class="main" width="100%" cellpadding="0" cellspacing="0">
                        <tbody>
                            <tr>
                                <td class="content-wrap aligncenter">
                                    <table width="100%" cellpadding="0" cellspacing="0">
                                        <tbody>
                                            <tr>
                                                <td class="content-block">
                                                    <h2>Reservation Complete !</h2>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="content-block">
                                                    <table class="invoice">
                                                        <tbody>
                                                            <tr>
                                                                <td>@ViewBag.FirstName</td>
                                                            </tr>
                                                            <tr>
                                                                <td>@Model.reservationDate</td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    <table class="invoice-items" cellpadding="0" cellspacing="0">
                                                                        <tbody>
                                                                            <tr>
                                                                                <td>Arrival Date </td>
                                                                                <td class="alignright">@Model.dateIn.ToString("D")</td>
                                                                            </tr>
                                                                            <tr>
                                                                                <td>Departure Date </td>
                                                                                <td class="alignright">@Model.dateOut.ToString("D")</td>
                                                                            </tr>
                                                                            <tr>
                                                                                <td>Room Type </td>
                                                                                <td class="alignright">@Model.roomType</td>
                                                                            </tr>
                                                                            <tr>
                                                                                <td>Number of Guests</td>
                                                                                <td class="alignright">@Model.numberOfPeople</td>
                                                                            </tr>
                                                                            <tr>
                                                                                <td>Room Number </td>
                                                                                <td class="alignright">@Model.RoomId</td>
                                                                            </tr>
                                                                            <tr>
                                                                                <td>Reservation Id </td>
                                                                                <td class="alignright">@Model.Id</td>
                                                                            </tr>
                                                                        </tbody>
                                                                    </table>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </td>
                                            </tr>
                                            
                                            <tr>
                                                <td class="content-block">
                                                    Company Inc. 123 Van Ness, San Francisco 94102
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="footer">
                        <table width="100%">
                            <tbody>
                                <tr>
                                    <td class="aligncenter content-block">Questions? Email <a href="mailto:">support@company.inc</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </td>
            <td></td>
        </tr>
    </tbody>
</table>

<link href="~/styles/Receipt.css" rel="stylesheet" />

